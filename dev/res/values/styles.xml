<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="DefaultButton" parent="android:Widget.Button">
		<item name="android:textSize">48sp</item>
		<item name="android:height">80sp</item>
	</style>
	<style name="DefaultList" parent="android:Widget.ListView">
		<item name="android:divider">@drawable/list_divider</item>
	</style>
	<style name="DefaultText" parent="android:TextAppearance">
		<item name="android:textSize">36sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@color/black</item>
	</style>
	<style name="DefaultText.List">
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingTop">16dp</item>
	</style>
	<style name="DefaultText.Entry" parent="android:Widget.EditText">
		<item name="android:background">@color/black</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textColorHint">@color/white</item>
		<item name="android:editable">true</item>
		<item name="android:textSize">24sp</item>
	</style>
	<style name="DefaultText.Menu">
		<item name="android:textColor">@color/black</item>
	</style>
</resources>
